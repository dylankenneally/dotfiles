# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true

# don't mess with inlined SVG's
[*.svg]
insert_final_newline = false

# Android Studio formatting
[*.java]
indent_style = space
indent_size = 4

# Kotlin formatting
[*.kt]
indent_style = space
indent_size = 4

# Gradle formatting
[*.gradle]
indent_style = space
indent_size = 4

# XML formatting
[*.xml]
indent_style = space
indent_size = 4

# Markdown formatting
[*.md]
trim_trailing_whitespace = false
